<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
        crossorigin="anonymous">
</head>

<body>
    <h1>
        <%= title %>
    </h1>
    <a href="/users/register">註冊管理員</a>
    <a href="/users/create_user">新增使用者</a>
    <a href="/logout">登出</a>
    <h3>User List</h3>
    <table class='table'>
        <tr>
            <th>帳號</th>
            <th>操作</th>
        </tr>
        <% userList.forEach(function(user){ %>
            <%if (user.role_id != 1) { %>
            <tr>
                <td>
                    <%= user.usr %>
                </td>
                <td>
                    <a href="/users?usr=<%= user.usr %>">查看</a>
                    <a href="/users/edit?usr=<%= user.usr %>">修改</a>
                    <a href="/users/delete?usr=<%= user.usr %>">刪除</a>
                </td>
            </tr>
            <%}%>
        <% }) %>
    </table>
</body>

</html>